---
import ExternalLink from "../components/ExternalLink.astro";
---

<main>
  <section class="text-squirrel-900 flex flex-col gap-6 py-4">
    <slot />
  </section>

  <div class="bg-squirrel-200 dark:bg-squirrel-700 my-6 h-px w-full"></div>

  <div class="flex gap-2 py-4 text-base md:items-center">
    <img
      src="/images/memoji-laptop.png"
      alt="memoji"
      class="h-12 w-12 rounded bg-[#b7c8b2]"
    />
    <div>
      <p
        class="text-sea-800 dark:text-sea-300 flex items-center gap-2 font-sans font-semibold"
      >
        Go check out the project!
      </p>

      <p class="text-squirrel-800 dark:text-squirrel-300 font-sans">
        You can see everything else I'm working on currently on <a
          href="https://github.com/fostertheweb"
          class="text-squirrel-800 hover:text-sea-700 dark:text-sea-100 dark:hover:text-sea-200 inline-flex items-center gap-1 hover:underline"
          >GitHub <ExternalLink />
        </a>
      </p>
    </div>
  </div>
</main>

<footer class="text-center text-base">
  <a href="/" class="text-squirrel-500 dark:text-squirrel-400 underline"
    >go home</a
  >
</footer>
