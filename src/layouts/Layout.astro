---
export interface Props {
  title: string;
}

import "@fontsource/archivo";
import ExternalLink from "../components/ExternalLink.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-squirrel-50 text-squirrel-900 dark:bg-squirrel-800 dark:text-squirrel-300 mx-auto w-full max-w-2xl p-4 print:max-w-full print:bg-white print:p-0"
  >
    <header
      class="flex flex-col justify-between gap-2 pb-4 print:hidden md:flex-row md:items-center md:gap-0"
    >
      <a href="/" class="flex items-center gap-2">
        <img src="/images/memoji-2.png" alt="memoji" class="h-12 rounded" />
        <div class="flex flex-col">
          <h2
            class="text-sea-800 dark:text-sea-300 font-sans text-xl font-bold"
          >
            Jonathan Foster
          </h2>
          <h2
            class="text-squirrel-500 dark:text-squirrel-50 font-mono text-base opacity-80"
          >
            @fostertheweb
          </h2>
        </div>
      </a>

      <ul class="text-squirrel-800 dark:text-sea-100 flex gap-6 font-sans">
        <li class="flex items-center gap-1">
          <a
            href="https://github.com/fostertheweb"
            class="hover:text-sea-700 dark:hover:text-sea-200 hover:underline"
            >GitHub</a
          >
          <ExternalLink />
        </li>
        <li class="flex items-center gap-1">
          <a
            href="https://twitter.com/fostertheweb"
            class="hover:text-sea-700 dark:hover:text-sea-200 hover:underline"
            >Twitter</a
          >
          <ExternalLink />
        </li>
        <li class="flex items-center gap-1">
          <a
            href="https://linkedin.com/in/fostertheweb"
            class="hover:text-sea-700 dark:hover:text-sea-200 hover:underline"
            >LinkedIn</a
          >
          <ExternalLink />
        </li>
      </ul>
    </header>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Cascadia Code";
    src: url("/fonts/CascadiaCode.woff2");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Cascadia Code";
    src: url("/fonts/CascadiaCodeItalic.woff2");
    font-weight: normal;
    font-style: italic;
  }
</style>
