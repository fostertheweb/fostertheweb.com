<style>
  @font-face {
    font-family: "bluu";
    src: url("/fonts/bluunext-bold-webfont.woff2") format("woff2"),
      url("/fonts/bluunext-bold-webfont.woff") format("woff");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "bluu";
    src: url("/fonts/bluunext-bolditalic-webfont.woff2") format("woff2"),
      url("/fonts/bluunext-bolditalic-webfont.woff") format("woff");
    font-weight: normal;
    font-style: italic;
  }

  @font-face {
    font-family: "Inter";
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url("/fonts/Inter-Regular.woff2?v=3.19") format("woff2"),
      url("/fonts/Inter-Regular.woff?v=3.19") format("woff");
  }

  @font-face {
    font-family: "Inter";
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: url("/fonts/Inter-Bold.woff2?v=3.19") format("woff2"),
      url("/fonts/Inter-Bold.woff?v=3.19") format("woff");
  }

  body {
    margin: 0;
  }

  .page {
    margin: 0 auto 0.4in auto;
    font-family: "Inter", sans-serif;
    text-size-adjust: 100%;
    line-height: 1.425;
    color: #444;
    max-width: 1024px;
  }

  .page a {
    text-decoration: none;
  }

  header {
    background-color: #f1fff8;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.4in;
  }

  .name {
    font-family: "bluu";
    font-size: 3.5rem;
    color: #3b6f55;
  }

  .subtitle {
    padding: 0 1.5rem;
    font-size: 0.8rem;
    color: #555;
  }

  .contact-option {
    display: flex;
    align-items: center;
    font-size: 15px;
    margin-top: 0.25rem;
  }

  .contact-option a {
    color: #444;
  }

  .section {
    margin: 0 0.4in;
  }

  .section-title {
    font-size: 24px;
    color: #336e7b;
    display: flex;
    align-items: center;
    font-variant: small-caps;
    letter-spacing: 0.05rem;
    font-weight: bold;
  }

  .section-body a {
    color: #007faa;
    font-weight: 500;
  }
</style>
