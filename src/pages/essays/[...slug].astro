---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("essays");
  return posts.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// TODO: load last modified date for "Last Update" timestamp
---

<Layout title={entry.data.title}>
  <header class="space-y-2 py-4">
    <h1 class="font-sans text-3xl font-bold text-zinc-800 dark:text-zinc-200">
      {entry.data.title}
    </h1>
    <div class="font-sans text-base">
      <a
        href="/"
        class="text-emerald-600 underline hover:text-emerald-700 dark:text-emerald-200 dark:hover:text-emerald-300"
        >Jonathan Foster</a
      ><span class="text-zinc-500 dark:text-zinc-400">
        - Last Updated: {entry.data.date.toISOString()}</span
      >
    </div>
  </header>

  <article class="essay font-serif text-lg leading-8 text-zinc-900">
    <Content />
  </article>
</Layout>

<style is:global>
  .essay pre {
    @apply mt-2 rounded border border-black/10 p-4 font-mono text-sm shadow-sm dark:border-white/5;
  }

  .essay p > code,
  .essay ol code,
  .essay ul code {
    @apply rounded border-0 border-emerald-400 bg-zinc-200/60 px-1 py-px font-mono text-sm text-emerald-700 dark:border-white/10 dark:bg-black/20 dark:text-emerald-300;
  }

  .essay pre code {
    @apply border-0 bg-transparent p-0 font-mono;
  }
</style>
