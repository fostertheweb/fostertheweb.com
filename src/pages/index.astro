---
import { getCollection } from "astro:content";
import About from "../components/About.astro";
import Layout from "../layouts/Layout.astro";

const thoughts = await getCollection("thoughts");
---

<Layout title="Jonathan Foster">
  <About />

  <h2 class="py-4 font-serif text-3xl text-slate-800">Projects</h2>
  <section class="py-4">
    <div class="w-1/3">
      <div
        class="rounded-lg bg-gradient-to-br flex items-center justify-center from-orange-400 to-rose-500 h-28 px-4 py-8 shadow"
      >
        <img src="/images/crowdq-fm.png" class="w-2/3 drop-shadow-sm" alt="crowdq.fm" />
      </div>
      <div class="px-4">
        <p class="rounded-b-md bg-white p-4 shadow text-slate-600 text-sm">asdfasdfasfd</p>
      </div>
    </div>
  </section>

  <h2 class="py-4 font-serif text-3xl text-slate-800">Thoughts</h2>
  <section>
    <ul>
      {
        thoughts.map((post) => (
          <li>
            <a href={`/thoughts/${post.slug}`}>{post.data.title}</a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
