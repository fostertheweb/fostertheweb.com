---
export interface Props {
  first?: boolean;
  company: string;
  title: string;
  when: string;
  location: string;
  summary: string[];
}

import CalendarIcon from "./CalendarIcon.astro";
import Highlighter from "./Highlighter.astro";
import IdIcon from "./IdIcon.astro";
import MapIcon from "./MapIcon.astro";

const { company, title, when, location, summary } = Astro.props;

const BUZZWORDS = [
  "Angular",
  "Flow",
  "npm",
  "webpack",
  "React",
  "Redux",
  "AngularJS",
  "Node.js",
  "Express",
  "Bootstrap",
  "AWS",
  "UX",
  "Protractor",
  "Karma",
  "Jasmine",
  "MongoDB",
  "AWS",
  "Splunk",
  "CloudWatch",
  "Terraform",
  "Jenkins",
  "Docker",
  "CI/CD",
  "CodeBuild",
  "Lambda",
  "TypeScript",
];
---

<div class="mx-auto flex items-baseline gap-12">
  <div class="flex w-[2.5in] flex-col items-start gap-1">
    <div class="text-lg font-bold">{company}</div>
    <div class="flex items-center gap-0">
      <IdIcon />
      {title}
    </div>
    <div class="flex items-center gap-0">
      <CalendarIcon />
      {when}
    </div>
    <div class="flex items-center gap-0">
      <MapIcon />
      {location}
    </div>
  </div>
  <ul class="mt-2 w-[6in] list-outside list-disc space-y-1 pl-4">
    {
      summary.map((bullet) => (
        <li>
          <Highlighter words={BUZZWORDS} text={bullet} />
        </li>
      ))
    }
  </ul>
</div>
